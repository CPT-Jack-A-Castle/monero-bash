#!/usr/bin/env bash
#
#							Missing "x" Functions
#
missing_MoneroDaemon()
{
	if [[ ! -f "$MONERO_CLI_PATH/monerod" ]]; then
		$ired; echo -n "Error: "
		$white; echo "monerod missing!"
		echo "Exiting..."
		exit
	fi
}

missing_MoneroCLI()
{
	if [[ ! -f "$MONERO_CLI_PATH/monero-wallet-cli" ]]; then
		$ired; echo -n "Error: "
		$white; echo "monero-wallet-cli missing!"
		echo "Exiting..."
		exit
	fi
}

missing_MoneroCLI_Folder()
{
	if [[ ! -d "$MONERO_CLI_PATH" ]]; then
		$ired; echo -n "Error: "
		$white; echo "Monero-CLI folder missing!"
		echo "Exiting..."
		exit
	fi
}
